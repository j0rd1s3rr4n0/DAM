import java.util.Scanner;
public class Exercici15 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Demanar un número enter que signifiqui una quantitat d’euros i digui la descomposició en bitllets
		//de 5,10,20,50 i 100.
		double euro,valor,conversion,restante;
		//DEFINIR VARIABLES
		Scanner input = new Scanner(System.in);
		System.out.print("Euro: ");
		euro = input.nextInt();
		
		valor = 100;
		conversion = Math.round((euro/valor)-0.5);
		restante = euro/valor - conversion*conversion;
		System.out.println((int)conversion+" Billetes de "+(int)valor+"€ | Restante:"+(int)Math.round(restante*valor-0.5)+" euro");
		euro = restante*valor;
		valor = 50;
		conversion = Math.round((euro/valor)-0.5);
		restante = euro/valor - conversion;
		System.out.println((int)conversion+" Billetes de "+(int)valor+"€  | Restante:"+(int)Math.round(restante*valor-0.5)+" euro");
		euro = restante*valor;
		valor = 20;
		conversion = Math.round((euro/valor)-0.5);
		restante = euro/valor - conversion;
		System.out.println((int)conversion+" Billetes de "+(int)valor+"€  | Restante:"+(int)Math.round(restante*valor-0.5)+" euro");
		euro = restante*valor;
		valor = 10;
		conversion = Math.round((euro/valor)-0.5);
		restante = euro/valor - conversion;
		System.out.println((int)conversion+" Billetes de "+(int)valor+"€  | Restante:"+(int)Math.round(restante*valor-0.5)+" euro");
		euro = restante*valor;
		valor = 5;
		conversion = (int) Math.round((euro/valor)-0.5);
		restante = euro/valor - conversion*(int);
		System.out.println((int)conversion+" Billetes de "+(int)valor+"€   | Monedas:"+(int)Math.round(restante*valor-0.5)+" euro");
		input.close();
	}

}
